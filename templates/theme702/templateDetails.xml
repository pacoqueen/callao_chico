		<language tag="en-GB">en-GB/en-GB.tpl_THEME702.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="advanced">

				<field name="logo" type="media"
					hide_default="1"
					label="TPL_THEME702_FIELD_LOGO_LABEL" description="TPL_THEME702_FIELD_LOGO_DESC" />

				<field name="sitetitle"  type="text" default=""
					label="TPL_THEME702_FIELD_SITETITLE_LABEL"
					description="TPL_THEME702_FIELD_SITETITLE_DESC"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="TPL_THEME702_FIELD_DESCRIPTION_LABEL"
					description="TPL_THEME702_FIELD_DESCRIPTION_DESC"
					filter="string" />
					
				
				<field name="Leftcolgrid"  type="text" default=""
